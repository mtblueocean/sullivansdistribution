                    {% endif %}
                    {% if block.settings.service_description != '' %}
                    <p>{{ block.settings.service_description }}</p>
                    {% endif %}
                  </div>
                </div>
                <!-- single-service-item end -->
                {%- endcase -%}
                {% endfor %}

              </div>
            </div>
          </div>
          <!-- sidebar Services Area End -->
        </div>
        <!-- category-container-sidebar end -->
      </div>
      {%- endunless -%}

    </div>
  </div>
</div>
