<!-- category-container-slider Start -->
<div class="category-container-slider" id="section-{{ section.id }}">
  <div class="container">
    <div class="row {% if section.settings.sidebar_handle == 'left_sidebar_handle' %}flex-row-reverse{% endif %}">
      <div class="{% if section.settings.sidebar_handle == 'without_sidebar' %}col-lg-12{% else %}col-lg-9{% endif %} col-12">
        <!-- category-main-container start -->
        <div class="category-main-container">

          <!-- Hero-slider-area start -->
          <div class="hero-slider-area">
            <div class="row">
              {% if section.settings.slider_enable %}
              <div class="col-lg-{{ section.settings.slider_coloum }}">
                <div class="hero-slider hero-slider-six">

                  {% for block in section.blocks %}
                  {% case block.type %}
                  {% when 'slide_1' %}
                  <div class="single-slide" style="background-image: url({% if block.settings.slider_img %}{{ block.settings.slider_img | img_url: 'master' }}{% else %}http:\/\/via.placeholder.com\/580x462{% endif %})">
                    <!-- Hero Content One Start -->
                    <div class="hero-content-six container">
                      <div class="row">
                        <div class="col-lg-7 ml-auto"> 
                          <div class="slider-text-info-1 text-{% if block.settings.text_style == 'text_style_left' %}left{% elsif block.settings.text_style == 'text_style_center' %}center{% elsif block.settings.text_style == 'text_style_right' %}right{% endif %}">
                            {% if block.settings.slider_subtitle != '' %}
                            <h4>{{ block.settings.slider_subtitle }}</h4>
                            {% endif %}
                            {% if block.settings.slider_title != '' %}
                            <h1>{{ block.settings.slider_title }}</h1>
                            {% endif %}
                            {% if block.settings.slider_description != '' %}
                            <p>{{ block.settings.slider_description }}</p>
                            {% endif %}
                            {% if block.settings.button_title != '' %}
                            <a href="{{ block.settings.button_url }}" class="btn slider-btn uppercase"><span><i class="fa fa-plus"></i>{{ block.settings.button_title }}</span></a>
                            {% endif %}
                          </div>
                        </div>
                      </div>
                    </div>
                    <!-- Hero Content One End -->
                  </div>

                  {% when 'slide_2' %}
                  <div class="single-slide" style="background-image: url({% if block.settings.slider_img_2 %}{{ block.settings.slider_img_2 | img_url: 'master' }}{% else %}http:\/\/via.placeholder.com\/580x462{% endif %})">
                    <!-- Hero Content One Start -->
                    <div class="hero-content-six container">
                      <div class="row">
                        <div class="col-lg-12 "> 
                          <div class="slider-text-info-2 text-{% if block.settings.text_style_2 == 'text_style_left_2' %}left{% elsif block.settings.text_style_2 == 'text_style_center_2' %}center{% elsif block.settings.text_style_2 == 'text_style_right_2' %}right{% endif %}">
                            {% if block.settings.slider_subtitle_2 != '' %}
                            <h4>{{ block.settings.slider_subtitle_2 }}</h4>
                            {% endif %}
                            {% if block.settings.slider_title_2 != '' %}
                            <h1>{{ block.settings.slider_title_2 }}</h1>
                            {% endif %}
                            {% if block.settings.slider_description_2 != '' %}
                            <p>{{ block.settings.slider_description_2 }}</p>
                            {% endif %}
                            {% if block.settings.button_title_2 != '' %}
                            <a href="{{ block.settings.button_url_2 }}" class="btn slider-btn uppercase"><span>{{ block.settings.button_title_2 }}</span></a>
                            {% endif %}
                          </div>
                        </div>
                      </div>
                    </div>
                    <!-- Hero Content One End -->
                  </div>
                  {% endcase %}
                  {% endfor %}


                </div>
              </div>
              {% endif %}
              {% if section.settings.banner_enable %}
              <div class="col-lg-{{ section.settings.banner_coloum }}">

                <div class="slier-banner">
                  <a href="{{ section.settings.banner_img_url }}">
                    <img src="{% if section.settings.banner_img %}{{ section.settings.banner_img | img_url: 'master' }}{% else %}http:\/\/via.placeholder.com\/270x220{% endif %}" alt="{{ section.settings.banner_img.alt }}">
                    {% if section.settings.banner_title != '' %}
                    <span>{{ section.settings.banner_title }}</span>
                  </a>
                  {% endif %}
                </div>

                <div class="slier-banner mt--30">
                  <a href="{{ section.settings.banner_img_url_2 }}">
                    <img src="{% if section.settings.banner_img_2 %}{{ section.settings.banner_img_2 | img_url: 'master' }}{% else %}http:\/\/via.placeholder.com\/270x220{% endif %}" alt="{{ section.settings.banner_img_2.alt }}">
                    {% if section.settings.banner_title_2 != '' %}
                    <span>{{ section.settings.banner_title_2 }}</span></a>
                  {% endif %}
                </div>
              </div>
              {% endif %}

            </div>
          </div>
          <!-- Hero-slider-area end -->
        </div>
        <!-- category-main-container end -->
      </div>

      {%- unless section.settings.sidebar_handle == 'without_sidebar' -%}
      <div class="col-lg-3">
        <!-- category-container-sidebar start -->
        <div class="category-container-sidebar">

          <!-- sidebar Services Area Start -->
          <div class="sidebar-services-area">
            <div class="row">
              <div class="col">
                {% for block in section.blocks %}
                {%- case block.type -%}
                {%- when 'service' -%}
