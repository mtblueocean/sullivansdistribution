
<h3 class="comment-title">{{ 'blogs.comments.with_count' | t: count: article.comments_count }}</h3>
{% for comment in article.comments %}
<!-- Start Single Review -->
<div class="pro_review">
  <div class="review_thumb">
    {% if section.settings.commentator_image %}
    <img src="{{ section.settings.commentator_image | img_url: 'small' }}" alt="{{ section.settings.commentator_image.alt }}">
    {% else %}
    <img src="{{ 'default-user-image_small.png' | asset_url }}" alt="author" />
    {% endif %}
  </div>
  <div class="review_details">
    <div class="review_info">
      <h4><a href="#">{{ comment.author }}</a></h4>
    </div>
    <div class="review_date">
      <span>{{ comment.created_at | date: "%b %d, %Y at %H:%M" }}</span>
    </div>
    <p>{{ comment.content }}</p>
  </div>
</div>
<!-- End Single Review -->
{% endfor %}

