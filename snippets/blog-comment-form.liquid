


{% form 'new_comment', article %}
{{ form.errors | default_errors }}

<div class="comments-area comments-reply-area">
  <div class="row">
    <div class="col-lg-12">
      <h3 class="comment-reply-title">{{ 'blogs.comments.title' | t }}</h3>
      <div class="comment-form-area">
        {% if section.settings.comment_description != '' %}
        <p class="comment-notes"><span id="email-notes">{{ section.settings.comment_description }}</span></p>
        {% endif %}
        <p class="comment-form-comment">
          {% if section.settings.text_area_title != '' %}
          <label>{{ section.settings.text_area_title }}</label> 
          {% endif %}
          <textarea class="comment-notes" name="comment[body]" id="commentBody"  placeholder="{{ 'blogs.comments.message' | t }}">{{ form.body }}</textarea>
        </p>
        <div class="comment-input">
          <p class="comment-form-author">
            {% if section.settings.text_name_title != '' %}
            <label>{{ section.settings.text_name_title }}</label> 
            {% endif %}
            <input type="text" class="{% if form.errors contains 'author' %}error{% endif %}" name="comment[author]" id="commentAuthor" value="{{ form.author }}" placeholder="{{ 'blogs.comments.name' | t }}">
          </p>
          <p class="comment-form-email">
            {% if section.settings.text_email_title != '' %}
            <label>{{ section.settings.text_email_title }}</label> 
            {% endif %}
            <input type="text" class="{% if form.errors contains 'email' %}error{% endif %}" name="comment[email]" id="commentEmail" value="{{ form.email }}" placeholder="{{ 'blogs.comments.email' | t }}">
          </p>
        </div>
        {% if blog.moderated? %}
        <p>{{ 'blogs.comments.moderated' | t }}</p>
        {% endif %}
        <div class="comment-form-submit">
          <input type="submit" value="{{ 'blogs.comments.post' | t }}" class="comment-submit">
        </div>

      </div>
    </div>
  </div>
</div>
{% endform %}