<div class="instagram-feed" id="section-{{ section.id }}" data-section-type="instafeed-section" data-section-id="{{ section.id }}">
  {% if section.settings.section_title != '' or section.settings.section_description != '' %}
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="section-title">
          <h2>{{ section.settings.section_title }}</h2>
          <p>{{ section.settings.section_description }}</p>
        </div>
      </div>
    </div>
  </div>
  {% endif %}
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div id="instafeed"></div>
      </div>
    </div>
  </div>
</div>

<style>
  
  {% if section.settings.section_title_bg_image %}
 #section-{{ section.id }} .section-title {
    background: url({{ section.settings.section_title_bg_image | img_url: 'master' }});
   background-repeat: no-repeat;
    background-position: bottom center;
   margin-bottom: 20px;
    padding-bottom: 60px;
}
{% endif %}
</style>
  
<script>
  (function ($) {
    "use strict";

    jQuery(document).ready(function(){

      var userFeed = new Instafeed({
        get: 'user',
        userId: '{{ section.settings.instafeed_user_id }}',
        limit: '{{ section.settings.instafeed_limit }}',
        accessToken: '{{ section.settings.instafeed_access_token }}',
        resolution: '{{ section.settings.image_resolution }}',
        template: '<a href="\{\{link\}\}"><img src="\{\{image\}\}"></a>'
      });
      userFeed.run();
    });

  })(jQuery); 
</script>

<script src="{{ 'instafeed.min.js' | asset_url }}"></script>