
<!-- single-latest-blog start -->
<div class="single-latest-blog mt--30">
  <div class="latest-blog-image">
  <a href="{{ article.url }}"><img src="{{ article | img_url : '370X220', crop: 'center' }}" alt="{{ article.title }}"></a>
  </div>
  <div class="latest-blog-content">
    <h4><a href="{{ article.url }}">{{ article.title }}</a></h4>
    <div class="post_meta">
      <span class="meta_date"><span> <i class="fa fa-calendar"></i></span>{{ article.published_at | date: "%b, %d , %y" }}</span>
      {% comment %}
	<span class="meta_author"><span></span>{{ article.author }}</span>
      {% endcomment %}
    </div>
     <div class="post-description">
    	{% if article.excerpt.size > 0 %}
      {{ article.excerpt }}
      {% else %}
      {{ article.content | truncatewords: 30 }}
      {% endif %}
    </div>
  </div>
</div>
<!-- single-latest-blog end -->